{
  "name": "bulletproof-react",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "dependencies": {
    "@headlessui/react": "^1.2.0",
    "@heroicons/react": "^1.0.1",
    "@hookform/resolvers": "^2.5.2",
    "@tailwindcss/typography": "^0.5.12",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^16.0.0",
    "@types/react": "^18.3.1",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.2.1",
    "axios": "^0.21.1",
    "clsx": "^1.1.1",
    "dayjs": "^1.10.6",
    "dompurify": "^2.2.9",
    "history": "^5.0.0",
    "intersection-observer": "^0.12.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "marked": "^2.0.7",
    "nanoid": "^3.1.23",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-error-boundary": "^3.1.3",
    "react-helmet-async": "^1.1.2",
    "react-hook-form": "^7.7.1",
    "react-query": "^3.34.15",
    "react-query-auth": "^1.0.0",
    "react-router-dom": "^6.23.0",
    "type-fest": "^1.2.0",
    "typescript": "^5.4.5",
    "vite": "^5.2.10",
    "web-vitals": "^1.0.1",
    "zod": "^3.1.0",
    "zustand": "^3.5.2"
  },
  "scripts": {
    "start": "yarn start:cli -- --open",
    "start:cli": "vite --port=3000",
    "build": "tsc && vite build",
    "test": "is-ci \"test:coverage\" \"test:jest\"",
    "test:jest": "craco test",
    "test:coverage": "CI=1 yarn test:jest -- --coverage",
    "msw:init": "msw init public --save",
    "postinstall": "husky install && yarn msw:init",
    "cy:install": "cypress install",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e:dev": "start-server-and-test start:cli http://localhost:3000 cy:open",
    "pretest:e2e:run": "yarn build",
    "test:e2e:run": "start-server-and-test serve http://localhost:3000 cy:run",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "serve": "vite preview --port=3000",
    "lint": "eslint --fix . --ext .js,.jsx,.ts,.tsx --ignore-path .gitignore",
    "prettier": "prettier --ignore-path .gitignore --write \"**/*.+(js|json|ts|tsx)\"",
    "format": "npm run prettier -- --write",
    "check-types": "tsc --project tsconfig.json --pretty --noEmit",
    "check-format": "npm run prettier -- --list-different",
    "validate-and-build": "npm-run-all --parallel check-types check-format lint build",
    "validate": "npm-run-all --parallel check-types && lint-staged",
    "generate": "plop --plopfile plopfile.cjs",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@faker-js/faker": "^8.4.1",
    "@mswjs/data": "^0.16.1",
    "@storybook/addon-actions": "^8.0.9",
    "@storybook/addon-essentials": "^8.0.9",
    "@storybook/addon-links": "^8.0.9",
    "@storybook/node-logger": "^8.0.9",
    "@storybook/react": "^8.0.9",
    "@storybook/react-vite": "8.0.9",
    "@testing-library/cypress": "^7.0.6",
    "@testing-library/react-hooks": "^7.0.0",
    "@types/dompurify": "^2.2.2",
    "@types/jsonwebtoken": "^8.5.1",
    "@types/lodash": "^4.14.170",
    "@types/marked": "^2.0.3",
    "@typescript-eslint/eslint-plugin": "^7.7.1",
    "@typescript-eslint/parser": "^7.7.1",
    "autoprefixer": "^10.4.19",
    "cross-env": "^7.0.3",
    "cypress": "^7.6.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-cypress": "^3.0.1",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest-dom": "^5.4.0",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.1",
    "eslint-plugin-react-hooks": "^4.6.1",
    "eslint-plugin-testing-library": "^6.2.2",
    "husky": "^6.0.0",
    "is-ci": "^3.0.0",
    "is-ci-cli": "^2.2.0",
    "lint-staged": "^11.0.0",
    "msw": "2.2.14",
    "npm-run-all": "^4.1.5",
    "plop": "^2.7.4",
    "postcss": "^8.4.38",
    "prettier": "^3.2.5",
    "react-test-renderer": "^17.0.2",
    "start-server-and-test": "^1.12.5",
    "storybook": "8.0.9",
    "tailwindcss": "^3.4.3",
    "vite-plugin-svgr": "^4.2.0"
  },
  "msw": {
    "workerDirectory": [
      "public"
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.+)": "<rootDir>/src/$1"
    },
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}",
      "!src/**/*.d.ts",
      "!src/**/*.stories.{js,jsx,ts,tsx}",
      "!src/test/**/*.{js,jsx,ts,tsx}"
    ]
  },
  "lint-staged": {
    "*.+(ts|tsx)": [
      "yarn lint"
    ]
  }
}
